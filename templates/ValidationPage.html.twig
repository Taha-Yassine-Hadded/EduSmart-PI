                    </div>
                    <div class="field" style="margin-bottom : 10px;">
                        <div class="label">
                            Code
                        </div>
                        <input type="number" placeholder="XXXXX" >
                    </div>
                    <div class="field btns">
                        <button class="prev-1 prev">Pr&eacute;c&eacute;dent</button>
                        <button class="next-1 next">V&eacute;rifier</button>
                    </div>
                </div>
                <div class="page">
                    <div class="field">
                        <div class="label">
                            Mot de passe
                        </div>
                        <input type="password">
                    </div>
                    <div class="field">
                        <div class="label">
                            Confirmer mot de passe
                        </div>
                        <input type="password">
                    </div>
                    <div class="field btns">
                        <button class="prev-2 prev">Pr&eacute;c&eacute;dent</button>
                        <button class="submit">Enregistrer</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
            </div>
        </div>
    </div>
</div>

















