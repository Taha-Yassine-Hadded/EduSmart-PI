   <body>

   {% include '/nav.html.twig' %}

<div class="container d-flex justify-content-center align-items-center" style="margin-top : 100px;">
    <div class="row border rounded-5 bg-white shadow box-area">
        <div class="col-md-6 p-0 rounded-4 d-flex justify-content-center align-items-center flex-column left-box" style="background: #fff;">
            <div class="featured-image mb-3">
                <img src="/images/emailVerification.png" class="img-fluid" style="width: 600px;">
