                <p>
                    Code
                </p>
                <div class="bullet">
                    <span>2</span>
                </div>
                <div class="check fas fa-check"></div>
                </div>
                <div class="step">
                <p>
                    Password
                </p>
                <div class="bullet">
                    <span>3</span>
                </div>
                <div class="check fas fa-check"></div>
                </div>
            </div>
            <div class="form-outer">
                <form action="#">
                <div class="page slide-page">
                    <div class="field">
                        <div class="label">
                            Adresse E-mail
                        </div>
                        <input type="email" id="emailInput" placeholder="xyz@esprit.tn"> 
