{% extends 'base.html.twig' %}

{% block title %}Hello CoursController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    {{ form_start(f,{'attr': {'novalidate': 'novalidate'}} ) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(f.cours, {'attr': {'class': 'form-control', 'placeholder': 'Your Name'}}) }}
                                {{ form_label(f.cours) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(f.titre, {'attr': {'class': 'form-control', 'placeholder': 'Your Email'}}) }}
                                {{ form_label(f.titre) }}
                                 <div class="col-12" style="color: red;">
                            {{ form_errors(f.titre) }}
                        </div>
                            </div>
                        </div>
                        <div class="col-12">
                            {{ form_widget(f.Submit, {'attr': {'class': 'btn btn-primary w-100 py-3'}}) }}
                            {{ form_label(f.Submit) }}
                        </div>
                    </div>
                    {{ form_end(f) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
