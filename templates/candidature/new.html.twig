{% extends 'base.html.twig' %}

{% block title %}new candidature{% endblock %}

{% block body %}
    <h1>Create new candidature</h1>

    <div class="col-lg-12 col-md-12 wow fadeInUp" data-wow-delay="0.5s">
        <div class="container mb-2 col-lg-15">
            <div class="row justify-content-left mt-4 mb-2">
                <div class="col-md-5">
                    <div class="card border-danger border-3 shadow" style="border-radius : 2%;">
                        <div class="card-header bg-danger text-center">
                            <h3 style="color : white;">Ajouter Offre</h3>
                        </div>
                        <div class="card-body">
                            {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}

                            
                            <div class="form-group mb-3">
                                {{ form_label(form.competences, 'Competences', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.competences, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger">
                                {{ form_errors(form.competences) }}
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                {{ form_label(form.cv, 'cv', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.cv, {'attr': {'class': 'form-control', 'type': 'cv'}}) }}
                                <div class="text-danger">
                                {{ form_errors(form.cv) }}
                                </div>
                            </div>

                            <div class="form-group">
                                    <button type="submit" class="btn btn-outline-danger mt-3">Ajouter</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('app_candidature_index') }}">back to list</a>
{% endblock %}