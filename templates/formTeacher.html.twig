{% block head %}
<head>
  <meta charset="UTF-8">
  <title>Ajouter Entreprise</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


    <style>
        .hm:focus {
            outline: none;
            border-color: rgb(251, 251, 251);
            box-shadow: 0 0 0 0.15rem rgba(167, 1, 1, 0.5);
            }
    </style>


{% endblock %}

{% block body %}

{% include '/nav.html.twig' %}

<div class="container mb-4" style="margin-top: 100px;">
    <div class="row justify-content-center mt-4 mb-2">
        <div class="col-md-5">
            <div class="card border-danger border-3 shadow" style="border-radius : 2%;">
                <div class="card-header bg-danger text-center">
                    {% if not is_edit %}
                        <h3 style="color : white;">Ajouter Enseignant</h3>
                    {% else %}
                        <h3 style="color : white;">Edit Enseignant</h3>
                    {% endif %}
                </div>
                <div class="card-body">
                    {{ form_start(f, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}

                    <div class="form-group mb-3">
                        {{ form_label(f.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(f.nom, {'attr': {'class': 'form-control hm'}}) }}
                        <div class="text-danger">
                        {{ form_errors(f.nom) }}
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(f.prenom, 'Pr√©nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(f.prenom, {'attr': {'class': 'form-control hm'}}) }}
                        <div class="text-danger">
                        {{ form_errors(f.prenom) }}
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(f.cin, 'CIN', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(f.cin, {'attr': {'class': 'form-control hm'}}) }}
                        <div class="text-danger">
                        {{ form_errors(f.cin) }}
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(f.genre, 'Genre', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(f.genre, {'attr': {'class': 'form-select'}}) }}
                        <div class="text-danger">
                            {{ form_errors(f.genre) }}
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(f.dateNaissance, 'Date de Naissance', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(f.dateNaissance, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                        {{ form_errors(f.dateNaissance) }}
                        </div>
                    </div>


                    <div class="form-group mb-3">
                        {{ form_label(f.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(f.email, {'attr': {'class': 'form-control hm'}}) }}
                        <div class="text-danger">
                        {{ form_errors(f.email) }}
                        </div>
                    </div>

                    {% if not is_edit %}
                    <div class="form-group mb-3">
                        {{ form_label(f.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(f.password, {'attr': {'class': 'form-control hm', 'type': 'password'}}) }}
                        <div class="text-danger">
                        {{ form_errors(f.password) }}
                        </div>
                    </div>
                    {% endif %}

                    <div class="form-group">
                        {% if not is_edit %}
                            <button type="submit" class="btn btn-outline-danger mt-3" style="margin-left : 195px;">Ajouter</button>
                        {% else %}
                            <button type="submit" class="btn btn-outline-danger mt-3" style="margin-left : 195px;">Enregistrer</button>
                        {% endif %}
                    </div>
                    {{ form_end(f) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}