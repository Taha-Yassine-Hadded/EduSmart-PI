{% extends 'base.html.twig' %}

{% block title %}Hello CoursController!{% endblock %}

{% block body %}
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-4">
                <h1> <a href="{{ path('app_cours_add')}}" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block">Ajouter Cours<i class="fa fa-arrow-right ms-3"></i></a></h1>
                <h1> <a href="{{ path('app_evaluationE')}}" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block">Ajouter Evaluation<i class="fa fa-arrow-right ms-3"></i></a></h1>
                 {% for a in list %}
                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="service-item text-center pt-3">
                        <div class="p-4">
                            <i class="fa fa-3x fa-graduation-cap text-primary mb-4"></i>
                              <h5 class="mb-3">{{a.NomModule}}</h5>
                            <h6 class="mb-3">{{a.NomCours}}</h6>
                           <div class=" d-flex justify-content-center bottom-0 start-0 mb-4">
                                <a href="{{ path('app_coursEModifier', {'id': a.id})}}"  class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Modifier</a>
                                <a href="{{ path('app_coursEdelete', {'id': a.id})}}" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Supprimer</a>
                            </div>
                        </div>
                    </div>
                </div>
                 {% endfor %}
        </div>
    </div>
{% endblock %}
